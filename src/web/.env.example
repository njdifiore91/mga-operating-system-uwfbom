# API Configuration
# Base URL for API requests - MUST be updated for production environments
VITE_API_BASE_URL=http://localhost:3000/api/v1

# API request timeout in milliseconds (default: 60 seconds)
VITE_API_TIMEOUT=60000

# API version identifier
VITE_API_VERSION=v1

# Authentication Configuration
# Okta OAuth 2.0 settings - MUST be updated with your Okta domain
VITE_OKTA_ISSUER=https://your-okta-domain/oauth2/default

# Okta client ID - MUST be updated with your application's client ID
VITE_OKTA_CLIENT_ID=your-client-id

# OAuth redirect URI - MUST match Okta application configuration
VITE_OKTA_REDIRECT_URI=http://localhost:5173/login/callback

# Security Settings
# Multi-factor authentication - MUST be enabled in production
VITE_MFA_ENABLED=true

# Session timeout in seconds (default: 30 minutes)
VITE_SESSION_TIMEOUT=1800

# API rate limit requests per minute
VITE_RATE_LIMIT_RPM=1000

# Application Settings
# Environment (development/staging/production)
VITE_APP_ENV=development

# Logging level (debug/info/warn/error)
VITE_LOG_LEVEL=debug

# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=false

# WARNING: This is an example configuration file
# Make sure to:
# 1. Copy this file to .env.local for local development
# 2. Set appropriate values for your environment
# 3. Never commit actual environment files (.env.*) to version control
# 4. Use appropriate secrets management for production environments
# 5. Validate all values before deployment